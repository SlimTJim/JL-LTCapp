<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/monthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dayText"
        android:layout_alignStart="@+id/dayText"
        android:layout_below="@+id/monthText"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="date"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateText"
        android:layout_column="0"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_row="2"
        android:text="day"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:text="Time"
        app:layout_columnSpan="2"
        android:layout_below="@+id/eventNameText"
        android:layout_alignLeft="@+id/eventNameText"
        android:layout_alignStart="@+id/eventNameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:text="Location"
        app:layout_columnSpan="2"
        android:layout_below="@+id/timeText"
        android:layout_alignLeft="@+id/timeText"
        android:layout_alignStart="@+id/timeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/eventNameText"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_column="2"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_toRightOf="@+id/monthText"
        android:text="Event NAme"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/holo_blue_dark" />
</RelativeLayout>